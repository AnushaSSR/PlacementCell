                        <li class="nav-item">
                            <a class="nav-link" href="/external-jobs/get-job-list">External Jobs</a>
                        </li>
                        <!-- Nav item: External Jobs -->
                        <!-- Nav item: Download report -->                       
                        <li class="nav-item">
                            <a class="nav-link" href="/report/download-report">
